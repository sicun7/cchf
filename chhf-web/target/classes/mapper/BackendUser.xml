<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chhf.mgmt.dao.BackendUserDao">

    <sql id="queryFields">
		id,user_name,password
	</sql>


    <insert id="insert" parameterType="BackendUser">
		  INSERT INTO user_backend
		  (user_name,password)
		  VALUES
		  (#{userName},#{password})
	</insert>

    <select id="query" resultType="BackendUser" parameterType="BackendUser">
        SELECT
        <include refid="queryFields"/>
        FROM
        user_backend
        WHERE
        <if test="userName != null">
            user_name = #{userName},
        </if>
        <if test="password != null">
            password = #{password}
        </if>
        limit 1
    </select>

    <select id="queryAll" resultType="BackendUser">
        SELECT
        <include refid="queryFields"/>
        FROM
        user_backend
    </select>
</mapper>